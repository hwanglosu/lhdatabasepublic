<!-- suppliers.hbs -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h1>Suppliers</h1>

{{!-- Below Code is Adapted from nodejs-starter-app Readme file from CS340 Winter 2024 term --}}
{{!-- Create a table --}}
<table id="suppliers-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the gamingSessionID, PlayerID, tableID, playerBet and playerPayout, in order --}}
        {{#each data}}
        <tr data-value={{this.supplierID}}>
            <td>{{this.supplierID}}</td>
            <td>{{this.supplierName}}</td>
            <td>{{this.dailyCost}}</td>
            <td><button onclick="deleteSupplier({{this.supplierID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_supplier.js"></script>

<h2>Add a Supplier</h2>
<p>To add a new supplier, please enter their information below and click 'Submit'!</p>
<form id="add-supplier-form-ajax">
    
    <label for="input-supplierName">supplierName: </label>
    <input type="text" name="input-supplierName" id="input-supplierName" required>

    <label for="input-dailyCost">dailyCost: </label>
    <input type="number" name="input-dailyCost" id="input-dailyCost" min="0.01" step="0.01" required>


    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_supplier.js"></script>