<!-- index.hbs -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h1>Tables</h1>
{{!-- Below Code is Adapted from nodejs-starter-app Readme file from CS340 Winter 2024 term --}}
{{!-- Create a table --}}
<table id="tables-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the tableID, PlayerID, tableID, playerBet and playerPayout, in order --}}
        {{#each data}}
        <tr data-value={{this.tableID}}>
            <td>{{this.tableID}}</td>
            <td>{{this.gameID}}</td>
            <td>{{this.employeesRequired}}</td>
            <td>{{this.moneyEarned}}</td>
            <td>{{this.supplierID}}</td>
            <td><button onclick="deleteTable({{this.tableID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_table.js"></script>

<h2>Add a Table</h2>
<p>To add a new table, please enter their information below and click 'Submit'!</p>
<form id="add-table-form-ajax">
    
    <select name="input-gameID" id="input-gameID" required>
        <option value="">Select a Game</option>
        {{#each games}}
        <option value="{{this.gameID}}">{{this.gameID}}: {{this.gameName}}</option>
        {{/each}}
    </select>
    
    <label for="input-employeesRequired">employeesRequired: </label>
    <input type="number" name="input-employeesRequired" id="input-employeesRequired" min="0" step="1" required>

    <label for="input-moneyEarned">moneyEarned: </label>
    <input type="number" name="input-moneyEarned" id="input-moneyEarned" min="0" step="0.01" required>

    <select name="input-supplierID" id="input-supplierID" required>
        <option value="">Select a Supplier</option>
        {{#each suppliers}}
        <option value="{{this.supplierID}}">{{this.supplierID}}: {{this.supplierName}}</option>
        {{/each}}
    </select>

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_table.js"></script>
